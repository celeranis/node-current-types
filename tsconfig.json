{
	"include": ["*.d.ts", "./test/*.spec.ts"],
	"exclude": ["node_modules/"],
	"compilerOptions": {
		"target": "ESNext",
		"moduleResolution": "Node",
		"lib": ["ES2022", "ESNext.Array"],
		"noImplicitAny": true,
		"skipLibCheck": false,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"types": ["node"],
		"noEmit": true,
		"forceConsistentCasingInFileNames": true
	}
}